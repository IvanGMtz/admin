{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% block avanzu_document_title %}Detalle Material{% endblock %}
{% block avanzu_page_title %}Detalle Material{% endblock %}
{% block titulo_pagina %}
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Detalle material</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
                  </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
{% endblock %}
{% block avanzu_page_content %}
  <!-- Default box -->
  <div class="card card-solid">
    <div class="card-body">
      <div class="row">
        <div class="col-12 col-sm-6">
          <h3 class="d-inline-block d-sm-none">{{ material.presentacion }} - {{ material.nombre|upper }}</h3>
          <div class="col-12">
            <img src="{{ vich_uploader_asset(material, 'foto') }}" class="product-image" alt="{{ material.nombre }}">
          </div>
        </div>
        <div class="col-12 col-sm-6">
          <h3 class="my-3">{{ material.presentacion }} - {{ material.nombre|upper }}</h3>
          <p>{{ material.descripcion }}</p>
          <hr>
{#
          <h4 class="mt-3">Medidas</h4>
          <p></p>#}
          <div class="btn-group btn-group-toggle" data-toggle="buttons">
            {#<label class="btn btn-default text-center">
              <input type="radio" name="color_option" id="color_option_b1" autocomplete="off">
              <span class="text-xl">Al</span>
              <br>
              {{ material.alto }}
            </label>
            <label class="btn btn-default text-center">
              <input type="radio" name="color_option" id="color_option_b2" autocomplete="off">
              <span class="text-xl">An</span>
              <br>
              {{ material.ancho }}
            </label>#}
            <label class="btn btn-default text-center">
              <input type="radio" name="color_option" id="color_option_b3" autocomplete="off">
              <span class="text-xl">{{ material.marca }}</span>
              <br>
              Marca
            </label>
            <label class="btn btn-default text-center">
              <input type="radio" name="color_option" id="color_option_b4" autocomplete="off">
              <span class="text-xl">{{ material.color }}</span>
              <br>
              Color
            </label>
          </div>
            
          <p><br>{{ material.presentacion }}</p>
          {% if material.medida %}
            <span class="badge badge-warning">{{ material.medida }}</span>
          {% endif %}
          {% if material.unidad %}
            <span class="badge badge-warning">{{ material.unidad }}</span>
          {% endif %}
          
          {% if material.costoActual %}
          <div class="bg-gray py-2 px-3 mt-4">
            <h2 class="mb-0">
              {{ material.costoActual }}
            </h2>
          </div>
          {% endif %}

          <div class="mt-4">
            <a href="{{ path('material_edit', { 'id': material.id }) }}" class="btn btn-primary btn-lg btn-flat">
              <i class="fas fa-edit fa-lg mr-2"></i>
              Editar
            </a>
            {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_INVENTARIO') %}{{ form_start(delete_form, { 'attr': {'style': 'display:inline-block'}} ) }}
                <input class="btn btn-danger btn-flat btn-sm" type="submit" value="Eliminar">
            {{ form_end(delete_form) }}{% endif %}
          </div>

          <div class="mt-4 product-share">
          </div>

        </div>
      </div>
      <div class="row mt-4">
        <nav class="w-100">
          <div class="nav nav-tabs" id="product-tab" role="tablist">
            <a class="nav-item nav-link active" id="product-desc-tab" data-toggle="tab" href="#product-desc" role="tab" aria-controls="product-desc" aria-selected="true">Registro</a>
          </div>
        </nav>
        <div class="tab-content p-3" id="nav-tabContent">
          <div class="tab-pane fade show active" id="product-desc" role="tabpanel" aria-labelledby="product-desc-tab">
            Fecha creación: {% if material.fechaCreacion %}{{ material.fechaCreacion|date('d-m-Y h:i:s a') }}{% endif %}<br>
            Fecha actualización: {% if material.fechaActualizacion %}{{ material.fechaActualizacion|date('d-m-Y h:i:s a') }}{% endif %}
          </div>
        </div>
      </div>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
{% endblock %}
