{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% block avanzu_document_title %}Tiendaclientes{% endblock %}
{% block avanzu_page_title %}Tiendaclientes{% endblock %}
{% block avanzu_page_subtitle %}{% if q is defined %}Filtrado por: {{q}}{% endif %}{% endblock %}
{% block titulo_pagina %}
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Listado de tiendaClientes</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
                  </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
{% endblock %}
{% block avanzu_page_content %}
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="overlay" style="display:none">
        <i class="fa fa-refresh fa-spin"></i>
      </div>
      <div class="card-header">
        
        <form class="form-inline pull-left" method="POST">            <div class="form-group ml-sm-1">
              <label for="id" class="sr-only">id</label>
              <input type="text" class="form-control" id="id" name="q[id]" placeholder="Id" {% if q and q.id %}value="{{ q.id }}"{% endif %}>
            </div>            <div class="form-group ml-sm-1">
              <label for="nombre" class="sr-only">nombre</label>
              <input type="text" class="form-control" id="nombre" name="q[nombre]" placeholder="Nombre" {% if q and q.nombre %}value="{{ q.nombre }}"{% endif %}>
            </div>            <div class="form-group ml-sm-1">
              <label for="apellido" class="sr-only">apellido</label>
              <input type="text" class="form-control" id="apellido" name="q[apellido]" placeholder="Apellido" {% if q and q.apellido %}value="{{ q.apellido }}"{% endif %}>
            </div>            <div class="form-group ml-sm-1">
              <label for="identificacion" class="sr-only">identificacion</label>
              <input type="text" class="form-control" id="identificacion" name="q[identificacion]" placeholder="Identificacion" {% if q and q.identificacion %}value="{{ q.identificacion }}"{% endif %}>
            </div>            <div class="form-group ml-sm-1">
              <label for="email" class="sr-only">email</label>
              <input type="text" class="form-control" id="email" name="q[email]" placeholder="Email" {% if q and q.email %}value="{{ q.email }}"{% endif %}>
            </div>            <div class="form-group ml-sm-1">
              <label for="telefono" class="sr-only">telefono</label>
              <input type="text" class="form-control" id="telefono" name="q[telefono]" placeholder="Telefono" {% if q and q.telefono %}value="{{ q.telefono }}"{% endif %}>
            </div>          
          <button type="submit" class="btn btn-primary ml-sm-1">Buscar</button>
        </form>
          
        <div class="card-tools pull-right">
          <div class="btn-group">
            <button type="button" class="btn btn-tool dropdown-toggle" data-toggle="dropdown">
              <i class="fas fa-wrench"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-right" role="menu">
              <a href="{{ path('tiendacliente_new') }}" class="dropdown-item" title="Nuevo">
                <i class="fa fa-plus"></i>&nbsp;Nuevo
              </a>            </div>
          </div>
        </div>
      </div>
      <div class="card-body table-responsive">  
        <table class="table table-sm table-bordered table-hover">
          <thead>
              <tr>
                  <th class="nowrap {% if pagination.isSorted('a.id') %} sorted{% endif %}">
                    {{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}
                  </th>
                  <th class="nowrap {% if pagination.isSorted('a.nombre') %} sorted{% endif %}">
                    {{ knp_pagination_sortable(pagination, 'Nombre', 'a.nombre') }}
                  </th>
                  <th class="nowrap {% if pagination.isSorted('a.apellido') %} sorted{% endif %}">
                    {{ knp_pagination_sortable(pagination, 'Apellido', 'a.apellido') }}
                  </th>
                  <th class="nowrap {% if pagination.isSorted('a.identificacion') %} sorted{% endif %}">
                    {{ knp_pagination_sortable(pagination, 'Identificacion', 'a.identificacion') }}
                  </th>
                  <th class="nowrap {% if pagination.isSorted('a.email') %} sorted{% endif %}">
                    {{ knp_pagination_sortable(pagination, 'Email', 'a.email') }}
                  </th>
                  <th class="nowrap {% if pagination.isSorted('a.telefono') %} sorted{% endif %}">
                    {{ knp_pagination_sortable(pagination, 'Telefono', 'a.telefono') }}
                  </th>
                  <th class="nowrap"></th>
              </tr>
          </thead>
          <tbody>
          {% for tiendaCliente in tiendaClientes %}
              <tr>
                  <td class="nowrap"><a href="{{ path('tiendacliente_show', { 'id': tiendaCliente.id }) }}">{{ tiendaCliente.id }}</a></td>
                  <td class="nowrap">{{ tiendaCliente.nombre }}</td>
                  <td class="nowrap">{{ tiendaCliente.apellido }}</td>
                  <td class="nowrap">{{ tiendaCliente.identificacion }}</td>
                  <td class="nowrap">{{ tiendaCliente.email }}</td>
                  <td class="nowrap">{{ tiendaCliente.telefono }}</td>
                  <td class="nowrap text-center">                                                  
                          <a class="btn btn-success btn-xs" title="Detalle del item" href="{{ path('tiendacliente_show', { 'id': tiendaCliente.id }) }}"><i class="fa fa-eye"></i></a>
                        
                                                                          
                          <a class="btn btn-primary btn-xs" title="Editar item" href="{{ path('tiendacliente_edit', { 'id': tiendaCliente.id }) }}"><i class="fa fa-edit"></i></a>
                        
                                          </td>
              </tr>
          {% endfor %}
          </tbody>
        </table>
        <div class="navigation mt-4">
          {{ knp_pagination_render(pagination) }}
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
{% block avanzu_javascripts_inline %}
  <script>
   
  </script>
{% endblock %}
