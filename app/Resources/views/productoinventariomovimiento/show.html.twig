{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% block avanzu_document_title %}Detalle Productoinventariomovimiento{% endblock %}
{% block avanzu_page_title %}Detalle Productoinventariomovimiento{% endblock %}
{% block titulo_pagina %}
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Detalle productoInventarioMovimiento</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
                  </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
{% endblock %}
{% block avanzu_page_content %}
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="overlay" style="display:none">
        <i class="fa fa-refresh fa-spin"></i>
      </div>
      <div class="card-body">
        
        <table class="table table-sm table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ productoInventarioMovimiento.id }}</td>
                </tr>
                <tr>
                    <th>Producto</th>
                    <td>{{ productoInventarioMovimiento.producto }}</td>
                </tr>
                <tr>
                    <th>Color</th>
                    <td>{{ productoInventarioMovimiento.color }}</td>
                </tr>
                <tr>
                    <th>Movimiento</th>
                    <td>{{ productoInventarioMovimiento.movimiento }}</td>
                </tr>
                <tr>
                    <th>Cantidad</th>
                    <td>{{ productoInventarioMovimiento.cantidad }}</td>
                </tr>
                <tr>
                    <th>Bodega</th>
                    <td>{{ productoInventarioMovimiento.bodega }}</td>
                </tr>
                <tr>
                    <th>Informacion</th>
                    <td>{{ productoInventarioMovimiento.informacion }}</td>
                </tr>
                <tr>
                    <th>Usuario</th>
                    <td>{{ productoInventarioMovimiento.usuario }}</td>
                </tr>
                <tr>
                    <th>Fecha</th>
                    <td>{% if productoInventarioMovimiento.fecha %}{{ productoInventarioMovimiento.fecha|date('d-m-Y h:i:s a') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
        
      </div>
      <div class="card-footer clearfix">
                <a class="btn btn-default btn-flat btn-sm" href="{{ path('productoinventariomovimiento_index') }}">Regresar</a>&nbsp;<a class="btn btn-warning btn-flat btn-sm" href="{{ path('productoinventariomovimiento_edit', { 'id': productoInventarioMovimiento.id }) }}">Editar</a>&nbsp;  {% if is_granted('ROLE_SUPER_ADMIN') %}{{ form_start(delete_form, { 'attr': {'style': 'display:inline-block'}} ) }}
      <input class="btn btn-danger btn-flat btn-sm" type="submit" value="Eliminar">
  {{ form_end(delete_form) }}{% endif %}
</div>
    </div>
  </div>
</div>

{% endblock %}
