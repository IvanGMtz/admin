{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% block avanzu_document_title %}Detalle Proveedor{% endblock %}
{% block avanzu_page_title %}Detalle Proveedor{% endblock %}
{% block titulo_pagina %}
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Detalle proveedor</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
                  </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
{% endblock %}
{% block avanzu_page_content %}
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="overlay" style="display:none">
        <i class="fa fa-refresh fa-spin"></i>
      </div>
      <div class="card-body">
        
        <table class="table table-sm table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ proveedor.id }}</td>
                </tr>
                <tr>
                    <th>Nombre</th>
                    <td>{{ proveedor.nombre }}</td>
                </tr>
                <tr>
                    <th>Nit</th>
                    <td>{{ proveedor.nit }}</td>
                </tr>
                <tr>
                    <th>Dirección</th>
                    <td>{{ proveedor.direccion }}</td>
                </tr>
                <tr>
                    <th>Teléfono1</th>
                    <td>{{ proveedor.telefono1 }}</td>
                </tr>
                <tr>
                    <th>Teléfono2</th>
                    <td>{{ proveedor.telefono2 }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ proveedor.email }}</td>
                </tr>
                <tr>
                    <th>Nombre de contacto</th>
                    <td>{{ proveedor.nombreContacto }}</td>
                </tr>
                <tr>
                    <th>Teléfono de contacto</th>
                    <td>{{ proveedor.telefonoContacto }}</td>
                </tr>
                <tr>
                    <th>Fecha de creación</th>
                    <td>{% if proveedor.fechaCreacion %}{{ proveedor.fechaCreacion|date('d-m-Y h:i:s a') }}{% endif %}</td>
                </tr>
                {#<tr>
                    <th>Estado</th>
                    <td>{{ proveedor.estado }}</td>
                </tr>#}
            </tbody>
        </table>
        
      </div>
      <div class="card-footer clearfix">
                <a class="btn btn-default btn-flat btn-sm" href="{{ path('proveedor_index') }}">Regresar</a>&nbsp;<a class="btn btn-warning btn-flat btn-sm" href="{{ path('proveedor_edit', { 'id': proveedor.id }) }}">Editar</a>&nbsp;
         {#   {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_ADMIN_PRODUCCION') %}           
            {{ form_start(delete_form, { 'attr': {'style': 'display:inline-block'}} ) }}
                <input class="btn btn-danger btn-flat btn-sm" type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
            {% endif %}#}
      </div>
    </div>
  </div>
</div>

{% endblock %}
