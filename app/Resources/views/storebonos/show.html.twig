{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% block avanzu_document_title %}Detalle Storebono{% endblock %}
{% block avanzu_page_title %}Detalle Storebono{% endblock %}
{% block titulo_pagina %}
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Detalle Bono</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
                  </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
{% endblock %}
{% block avanzu_page_content %}
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="overlay" style="display:none">
        <i class="fa fa-refresh fa-spin"></i>
      </div>
      <div class="card-body">
        
        <table class="table table-sm table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ storeBono.id }}</td>
                </tr>
                <tr>
                    <th>Codigo</th>
                    <td>{{ storeBono.codigo }}</td>
                </tr>
                <tr>
                    <th>Valor</th>
                    <td>{{ storeBono.valor }}</td>
                </tr>
                <tr>
                    <th>Producto</th>
                    <td>{% if storeBono.producto %}{{ storeBono.producto.nombre }}{% else %}{{ 'Todos' }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Tipo de Cliente</th>
                    <td>{{ storeBono.clienteTipo }}</td>
                </tr>
                <tr>
                    <th>Usuario</th>
                    <td>{% if storeBono.usuario %}{{ storeBono.usuario.email }}{% else %}{{ 'Todos' }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Categoria</th>
                    <td>{% if storeBono.categoria %}{{ storeBono.categoria.nombreEs }}{% else %}{{ 'Todos' }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Fechavencimiento</th>
                    <td>{% if storeBono.fechaVencimiento %}{{ storeBono.fechaVencimiento|date('d-m-Y h:i:s a') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Estatus</th>
                    <td>{{ storeBono.estatus }}</td>
                </tr>
            </tbody>
        </table>
        
      </div>
      <div class="card-footer clearfix">
                <a class="btn btn-default btn-flat btn-sm" href="{{ path('storebonos_index') }}">Regresar</a>&nbsp;<a class="btn btn-warning btn-flat btn-sm" href="{{ path('storebonos_edit', { 'id': storeBono.id }) }}">Editar</a>&nbsp;  {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_VENDEDOR') or is_granted('ROLE_ADMIN_VENTAS') %}{{ form_start(delete_form, { 'attr': {'style': 'display:inline-block'}} ) }}
      <input class="btn btn-danger btn-flat btn-sm" type="submit" value="Eliminar">
  {{ form_end(delete_form) }}{% endif %}
</div>
    </div>
  </div>
</div>

{% endblock %}
