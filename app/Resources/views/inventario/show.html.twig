{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% block avanzu_document_title %}Detalle Inventario{% endblock %}
{% block avanzu_page_title %}Detalle Inventario{% endblock %}
{% block titulo_pagina %}
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Detalle inventario</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
                  </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
{% endblock %}
{% block avanzu_page_content %}
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="overlay" style="display:none">
        <i class="fa fa-refresh fa-spin"></i>
      </div>
      <div class="card-body">
        
        <table class="table table-sm table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ inventario.id }}</td>
                </tr>
                <tr>
                    <th>Ingresototal</th>
                    <td>{{ inventario.ingresoTotal }}</td>
                </tr>
                <tr>
                    <th>Egresototal</th>
                    <td>{{ inventario.egresoTotal }}</td>
                </tr>
                <tr>
                    <th>Cantidadactual</th>
                    <td>{{ inventario.cantidadActual }}</td>
                </tr>
                <tr>
                    <th>Fechaultimoingreso</th>
                    <td>{% if inventario.fechaUltimoIngreso %}{{ inventario.fechaUltimoIngreso|date('d-m-Y h:i:s a') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Fechaultimoegreso</th>
                    <td>{% if inventario.fechaUltimoEgreso %}{{ inventario.fechaUltimoEgreso|date('d-m-Y h:i:s a') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Reserva</th>
                    <td>{{ inventario.reserva }}</td>
                </tr>
            </tbody>
        </table>
        
      </div>
      <div class="card-footer clearfix">
                <a class="btn btn-default btn-flat btn-sm" href="{{ path('inventario_index') }}">Regresar</a>&nbsp;<a class="btn btn-warning btn-flat btn-sm" href="{{ path('inventario_edit', { 'id': inventario.id }) }}">Editar</a>&nbsp;  {% if is_granted('ROLE_SUPER_ADMIN') or is_granted('ROLE_ADMIN_PRODUCCION') %}{{ form_start(delete_form, { 'attr': {'style': 'display:inline-block'}} ) }}
      <input class="btn btn-danger btn-flat btn-sm" type="submit" value="Eliminar">
  {{ form_end(delete_form) }}{% endif %}
</div>
    </div>
  </div>
</div>

{% endblock %}
