{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}
{% block avanzu_document_title %}Ordencompraitems{% endblock %}
{% block avanzu_page_title %}Ordencompraitems{% endblock %}
{% block avanzu_page_subtitle %}{% if q is defined %}Filtrado por: {{q}}{% endif %}{% endblock %}
{% block titulo_pagina %}
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Listado de ordenCompraItems</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
                  </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
{% endblock %}
{% block avanzu_page_content %}
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="overlay" style="display:none">
        <i class="fa fa-refresh fa-spin"></i>
      </div>
      <div class="card-header">
        
        <form class="form-inline pull-left" method="POST">            <div class="form-group ml-sm-1">
              <label for="id" class="sr-only">id</label>
              <input type="text" class="form-control" id="id" name="q[id]" placeholder="Id" {% if q and q.id %}value="{{ q.id }}"{% endif %}>
            </div>            <div class="form-group ml-sm-1">
              <label for="cantidad" class="sr-only">cantidad</label>
              <input type="text" class="form-control" id="cantidad" name="q[cantidad]" placeholder="Cantidad" {% if q and q.cantidad %}value="{{ q.cantidad }}"{% endif %}>
            </div>            <div class="form-group ml-sm-1">
              <label for="valorUnidad" class="sr-only">valorUnidad</label>
              <input type="text" class="form-control" id="valorUnidad" name="q[valorUnidad]" placeholder="Valorunidad" {% if q and q.valorUnidad %}value="{{ q.valorUnidad }}"{% endif %}>
            </div>            <div class="form-group ml-sm-1">
              <label for="valorTotal" class="sr-only">valorTotal</label>
              <input type="text" class="form-control" id="valorTotal" name="q[valorTotal]" placeholder="Valortotal" {% if q and q.valorTotal %}value="{{ q.valorTotal }}"{% endif %}>
            </div>            <div class="form-group ml-sm-1">
              <label for="estado" class="sr-only">estado</label>
              <input type="text" class="form-control" id="estado" name="q[estado]" placeholder="Estado" {% if q and q.estado %}value="{{ q.estado }}"{% endif %}>
            </div>          
          <button type="submit" class="btn btn-primary ml-sm-1">Buscar</button>
        </form>
          
        <div class="card-tools pull-right">
          <div class="btn-group">
            <button type="button" class="btn btn-tool dropdown-toggle" data-toggle="dropdown">
              <i class="fas fa-wrench"></i>
            </button>
            <div class="dropdown-menu dropdown-menu-right" role="menu">
              <a href="{{ path('ordencompraitem_new') }}" class="dropdown-item" title="Nuevo">
                <i class="fa fa-plus"></i>&nbsp;Nuevo
              </a>            </div>
          </div>
        </div>
      </div>
      <div class="card-body table-responsive">  
        <table class="table table-sm table-bordered table-hover">
          <thead>
              <tr>
                  <th class="nowrap {% if pagination.isSorted('a.id') %} sorted{% endif %}">
                    {{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}
                  </th>
                  <th class="nowrap {% if pagination.isSorted('a.fechaCreacion') %} sorted{% endif %}">
                    {{ knp_pagination_sortable(pagination, 'Fechacreacion', 'a.fechaCreacion') }}
                  </th>
                  <th class="nowrap {% if pagination.isSorted('a.cantidad') %} sorted{% endif %}">
                    {{ knp_pagination_sortable(pagination, 'Cantidad', 'a.cantidad') }}
                  </th>
                  <th class="nowrap {% if pagination.isSorted('a.valorUnidad') %} sorted{% endif %}">
                    {{ knp_pagination_sortable(pagination, 'Valorunidad', 'a.valorUnidad') }}
                  </th>
                  <th class="nowrap {% if pagination.isSorted('a.valorTotal') %} sorted{% endif %}">
                    {{ knp_pagination_sortable(pagination, 'Valortotal', 'a.valorTotal') }}
                  </th>
                  <th class="nowrap {% if pagination.isSorted('a.estado') %} sorted{% endif %}">
                    {{ knp_pagination_sortable(pagination, 'Estado', 'a.estado') }}
                  </th>
                  <th class="nowrap"></th>
              </tr>
          </thead>
          <tbody>
          {% for ordenCompraItem in ordenCompraItems %}
              <tr>
                  <td class="nowrap"><a href="{{ path('ordencompraitem_show', { 'id': ordenCompraItem.id }) }}">{{ ordenCompraItem.id }}</a></td>
                  <td class="nowrap" data-sort-value="{% if ordenCompraItem.fechaCreacion %}{{ ordenCompraItem.fechaCreacion|date('U') }}{% endif %}">{% if ordenCompraItem.fechaCreacion %}{{ ordenCompraItem.fechaCreacion|date('d-m-Y h:i:s a') }}{% endif %}</td>
                  <td class="nowrap">{{ ordenCompraItem.cantidad }}</td>
                  <td class="nowrap">{{ ordenCompraItem.valorUnidad }}</td>
                  <td class="nowrap">{{ ordenCompraItem.valorTotal }}</td>
                  <td class="nowrap">{{ ordenCompraItem.estado }}</td>
                  <td class="nowrap text-center">                                                  
                          <a class="btn btn-success btn-xs" title="Detalle del item" href="{{ path('ordencompraitem_show', { 'id': ordenCompraItem.id }) }}"><i class="fa fa-eye"></i></a>
                        
                                                                          
                          <a class="btn btn-primary btn-xs" title="Editar item" href="{{ path('ordencompraitem_edit', { 'id': ordenCompraItem.id }) }}"><i class="fa fa-edit"></i></a>
                        
                                          </td>
              </tr>
          {% endfor %}
          </tbody>
        </table>
        <div class="navigation mt-4">
          {{ knp_pagination_render(pagination) }}
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
{% block avanzu_javascripts_inline %}
  <script>
   
  </script>
{% endblock %}
