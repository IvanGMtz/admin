<script>
  $('#appbundle_almacenzonainventario_almacen').change(function(){
    var almacen = $(this).find('option:selected', this).val();
    $.get("/admin/zona/almacen/"+almacen+"/get_zonas", function(data){
      var zonas = data.zonas;
      var selector = $('#appbundle_almacenzonainventario_almacenZona');
      selector.empty();
      for(var i = 0; i < zonas.length; i++){
        var opcion = $('<option value="'+zonas[i].id+'">'+zonas[i].tag+"</option>");
        selector.append(opcion);
      }
    });
  });
</script>

